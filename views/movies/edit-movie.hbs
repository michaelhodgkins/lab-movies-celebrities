<h2>Edit the movie: {{name}}</h2>

<form action="/movies/{{_id}}" method="post">

<label for="name-input">Name:</label>
<input type="text" name="name" id="name-input" value="{{name}}" required />

<label for="genre-input">Genre:</label>
<input type="text" name="genre" id="genre-input" value="{{genre}}" />

<label for="plot-input">Plot:</label>
<input type="text" name="plot" id="plot-input" value="{{plot}}"  />

<label for="cast">Cast:</label>
<select multiple name='cast' id='cast'> 
    {{#each DbCelebs}}
    <option value="{{this._id}}">{{this.name}}</option>
    {{/each}}

</select>

<button type="submit">Save changes</button>

</form>