<h2>Create a Movie of your choice!</h2>

<form action="/movies/create" method="post">

<label for="name-input">Name:</label>
<input type="text" name="name" id="name-input" required />

<label for="genre-input">Genre:</label>
<input type="text" name="genre" id="genre-input" />

<label for="plot-input">Plot:</label>
<input type="text" name="plot" id="plot-input"  />

<label for="cast">Cast:</label>
<select multiple name='cast' id='cast'> 
    {{#each DbCelebs}}
    <option value="{{this._id}}">{{this.name}}</option>
    {{/each}}

</select>

<button type="submit">create a new movie</button>

</form>